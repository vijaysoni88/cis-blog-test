<div class='container'>
  <div class='row'> 
    <div class='col-lg-12'>
      <h1>Listing Blogs</h1>
      <%= link_to 'New article', new_article_path %>
      <table class='table table-hover table-border'>
        <thead>
          <th>Title</th>
          <th>Text</th>
          <th colspan='3'></th>
        </thead>
       
        <% @articles.each do |article| %>
          <tr id='article_<%= article.id %>'>
            <td><%= article.title %></td>
            <td><%= article.text %></td>
            <td><%= link_to 'Show', article_path(article), class: 'btn btn-success btn-sm mr-2' %><%= link_to 'Destroy', article_path(article),
                    method: :delete, remote: true, class: 'btn btn-danger btn-sm',
                    data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>