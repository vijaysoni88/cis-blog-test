 <%= form_with(model: [ @article, @article.comments.build ], :remote => true, class:"form-inline") do |form| %>
  <div class="form-group">
    <%= form.label :commenter %><br>
    <%= form.text_field :commenter %>
  </div>
  <div class="form-group">
    <%= form.label :body %><br>
    <%= form.text_area :body %>
  </div>
  <p>
    <%= form.submit %>
  </p>
<% end %>